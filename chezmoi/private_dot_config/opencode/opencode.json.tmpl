    }{{- if and (env "AZURE_LB_ENDPOINT") (env "AZURE_LB_BEARER_TOKEN") }},
    "my-azure-lb": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Azure LB",
      "options": {
        "baseURL": "{{ env "AZURE_LB_ENDPOINT" }}",
        "headers": {
          "Authorization": "Bearer {{ env "AZURE_LB_BEARER_TOKEN" }}"
        }
      },
      "models": {
        "gpt-5.2-codex": { "id": "gpt-5.2-codex" },
        "gpt-5.1-codex": { "id": "gpt-5.1-codex" },
        "gpt-5.1-codex-max": { "id": "gpt-5.1-codex-max" },
        "gpt-5.1-codex-mini": { "id": "gpt-5.1-codex-mini", "options": { "useResponsesApi": true } },
        "gpt-5.2": { "id": "gpt-5.2" },
        "gpt-5-mini": { "id": "gpt-5-mini" }
      }
    }{{- end }}
  },
  "lsp": {},
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"]
    },
    "gemini": {
      "type": "local",
      "command": ["npx", "-y", "gemini-mcp-tool@latest"]
    },
    "perplexity-ask": {
      "type": "local",
      "command": ["npx", "-y", "server-perplexity-ask"],
      "environment": {
        "PERPLEXITY_API_KEY": "{{ env "PERPLEXITY_API_KEY" }}"
      }
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "context7-mcp@latest"],
      "environment": {
        "CONTEXT7_API_KEY": "{{ env "CONTEXT7_API_KEY" }}"
      }
    },
    "microsoft-learn": {
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp"
    }
  }
}
